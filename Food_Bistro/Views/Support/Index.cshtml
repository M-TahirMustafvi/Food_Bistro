@{
    if (!(string.IsNullOrEmpty(ViewContext.HttpContext.Session.GetString("UserName"))))
        Layout = "_SessionLayout";

    ViewBag.Title = "Support";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
        <div class="card p-4 shadow">
            <h2 class="text-center mb-4">Send Us a Message</h2>
                <form class="row g-3">
  
                    <div class="col-12">
                        <label for="inputName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="inputName" placeholder="John Doe">
                    </div>
    
                    <div class="col-md-6">
                        <label for="inputEmail4" class="form-label">Email</label>
                        <input type="email" class="form-control" id="inputEmail4">
                    </div>

                    <div class="col-md-6">
                        <label for="inputPhone" class="form-label">Phone</label>
                        <input type="number" class="form-control" id="inputPhone">
                    </div>
  
                    <div class="col-12">
                        <label for="inputMessage" class="form-label">Message</label>
                        <textarea class="form-control" id="inputMessage" rows="5"></textarea>

                    </div> 

                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Send</button>
                    </div>

                </form>

        </div>
 </div>