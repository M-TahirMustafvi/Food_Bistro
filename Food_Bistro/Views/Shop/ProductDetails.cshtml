<div class="container-fluid m-2 bg-light">
 @{
        if (!(string.IsNullOrEmpty(ViewContext.HttpContext.Session.GetString("UserName"))))
            Layout = "_SessionLayout";

        ViewBag.Title = "Product-Details";
 }

    <div class="row">

        <div class="col-md-4">
            <img src="Assets/Products/pro-02.png" alt="Product Image" style="width: 100%; height: 350px; object-fit: cover; border-radius: 5px;">
        </div>

        <div class="col-md-4 d-flex flex-column justify-content-center">
            <div>
                <h3 class="mb-3">Product Name</h3>
                <p>This is a brief description of the product, highlighting its features and benefits. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla quis lorem ut libero malesuada feugiat.</p>
                <p class="text-muted mt-2">Price: <strong>$99.99</strong></p>
            </div>
        </div>

        <div class="col-md-4 d-flex flex-column justify-content-center">
            <div>
                <button class="btn btn-success btn-lg mb-3 w-100">Add to Cart</button>
                <button class="btn btn-primary btn-lg w-100">Buy Now</button>
            </div>
        </div>
    </div>
</div>
